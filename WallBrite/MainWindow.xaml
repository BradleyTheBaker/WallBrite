<Window x:Class="WallBrite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WallBrite"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel x:Name="MainPanel">
        <StackPanel DockPanel.Dock="Left" x:Name="SidePanel">
            <Button Click="AddFiles">Add Files</Button>
            <Button Click="AddFolder">Add Folder</Button>
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom">
            <Button>Cool1</Button>
            <Button>Cool2</Button>
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Hidden" CanContentScroll="True">
            <Grid x:Name="imageGrid">
                <Grid.ColumnDefinitions>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                </Grid.RowDefinitions>
            </Grid>
        </ScrollViewer>
    </DockPanel>
    
</Window>
