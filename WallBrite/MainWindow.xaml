<Window x:Class="WallBrite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WallBrite"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel x:Name="MainPanel">
        <Border x:Name="SidePanel" Width="105" Background="GhostWhite" BorderBrush="Black" BorderThickness="0 0 2 0" Padding="5 0">
            <StackPanel DockPanel.Dock="Left">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Margin" Value="0, 2"/>
                    </Style>
                </StackPanel.Resources>
                <TextBlock FontWeight="Bold" FontSize="14" TextWrapping="WrapWithOverflow" TextAlignment="Center" Margin="0 5">Library Controls</TextBlock>

                <StackPanel>
                    <Button Click="AddFiles">Add Files</Button>
                    <Button Click="AddFolder">Add Folder</Button>
                </StackPanel>

                <StackPanel Margin="0 5">
                    <TextBlock>Sort By:</TextBlock>
                    <ComboBox x:Name="SortTypeBox" SelectionChanged="SortTypeChanged" SelectedValuePath="Content">
                        <ComboBoxItem>Brightness</ComboBoxItem>
                        <ComboBoxItem>Date Added</ComboBoxItem>
                        <ComboBoxItem>Enabled</ComboBoxItem>
                    </ComboBox>
                    <TextBlock>Sort Order:</TextBlock>
                    <ComboBox x:Name="SortOrderBox" SelectionChanged="SortOrderChanged" SelectedValuePath="Content">
                        <ComboBoxItem>Descending</ComboBoxItem>
                        <ComboBoxItem>Ascending</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </Border>
        <StackPanel DockPanel.Dock="Bottom">
            <Button>Cool1</Button>
            <Button>Cool2</Button>
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Hidden" CanContentScroll="True">
            <Grid x:Name="imageGrid">
                <Grid.ColumnDefinitions>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                </Grid.RowDefinitions>
            </Grid>
        </ScrollViewer>
    </DockPanel>
    
</Window>
